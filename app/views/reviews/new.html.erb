<div class="container my-5">
  <div class="row mx-auto my-3 justify-content-center">
    <div class="col-6 mt-5">
      <h1>New review for <%= @item.name %></h1>

      <%= simple_form_for [@item, @review] do |f| %>
      <%= f.input :content, placeholder: 'Rate your experience' %>
      <%= f.input :rating, collection: (0..5) %>
      <%= link_to 'Cancel', item_path(@item) %>
      <%= f.submit "Submit" %>
      <% end %>
    </div>
  </div>
</div>
